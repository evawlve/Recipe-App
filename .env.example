# Database
DATABASE_URL=postgresql://username:password@localhost:5432/recipe_app
DIRECT_URL=postgresql://username:password@localhost:5432/recipe_app

# AWS S3 Configuration (Required)
AWS_REGION=us-east-2
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# CloudFront CDN Configuration (Recommended for better performance)
# Server-side (used to build full image URLs)
CLOUDFRONT_IMAGE_BASE=https://dXXXXXXXXXXXXX.cloudfront.net
# Client-side (for preconnect and next.config.ts remotePatterns)
NEXT_PUBLIC_CLOUDFRONT_HOST=dXXXXXXXXXXXXX.cloudfront.net
# Alternative client-side base URL (used if CLOUDFRONT_IMAGE_BASE not set)
NEXT_PUBLIC_CLOUDFRONT_IMAGE_BASE=https://dXXXXXXXXXXXXX.cloudfront.net
# Legacy (deprecated, use CLOUDFRONT_IMAGE_BASE instead)
# S3_PUBLIC_BASE_URL=https://your-cloudfront-domain.com

# Site Configuration
# Public site URL (used for generating absolute URLs)
NEXT_PUBLIC_SITE_URL=https://your-site.com

# Supabase Configuration (Required for Authentication & RLS)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# USDA Food Database API (Optional - for nutrition data)
FDC_API_KEY=your-usda-api-key
# FDC API rate limit per hour (default: 1000)
FDC_RATE_LIMIT_PER_HOUR=1000
# Enable USDA bulk import (default: false)
USDA_BULK_IMPORT_ENABLED=false

# Feature Flags
FOOD_MAPPING_V2=1
HEALTH_SCORE_V2=1
# Enable Portion V2 resolution (new 5-tier fallback system)
ENABLE_PORTION_V2=false
# Enable branded food search via FDC API
ENABLE_BRANDED_SEARCH=false

# Sentry Configuration
SENTRY_DB_SPAN_SAMPLE=1

# Development API Key (for testing)
DEV_API_KEY=your-dev-api-key

# Demo user email (defaults to demo@example.com if not set)
DEMO_USER_EMAIL=demo@example.com

# Cron Jobs
# Secret key for authenticating cron job requests
CRON_SECRET=your-cron-secret-key

# Debug Flags
# Enable nutrition calculation debug logging (set to "1" to enable)
NUTRITION_DEBUG=0
# Test flag for development/testing (set to "1" or "true" to enable)
TEST_FLAG=false

# Vercel Environment Variables (Auto-set by Vercel, documented for reference)
# These are automatically set by Vercel during deployment/build
# You typically don't need to set these manually
VERCEL_ENV=production
VERCEL=1
NEXT_PHASE=phase-production-build
NEXT_RUNTIME=nodejs
BUILD_TIME=true

# FatSecret Platform API
FATSECRET_CLIENT_ID=1111111111111111111111111111
FATSECRET_CLIENT_SECRET=1111111111111111111111111111
ENABLE_FATSECRET=true
FATSECRET_MIN_CONFIDENCE=0.7
FATSECRET_TIMEOUT_MS=2500
